<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Ride Offer/Request"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/textView10"
            android:paddingLeft="100dp"
            android:paddingTop="15dp"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_blue_light" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="363dp"
            android:weightSum="1">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="User Name:"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView4"
                        android:padding="10dp"
                        android:textStyle="normal|bold"
                        android:textSize="17sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="45dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false">

                    <TextView
                        android:text="To:"
                        android:layout_width="match_parent"
                        android:id="@+id/textView5"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:elevation="0dp"
                        android:padding="10dp"
                        android:layout_height="50dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="From:"
                        android:layout_width="match_parent"
                        android:id="@+id/textView6"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:layout_height="50dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="Date: "
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:id="@+id/textView7"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="Price:"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:id="@+id/textView8"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.29" >

                    <TextView
                        android:text="Comments:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:layout_weight="0.89">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:text="Username"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:id="@+id/post_username"
                        android:padding="10dp"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/post_destination"
                        android:padding="10dp"
                        android:text="Destination"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_width="287dp"
                        android:layout_height="50dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/post_departure"
                        android:padding="10dp"
                        android:text="Start goes here"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_width="287dp"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_height="50dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_height="45dp"
                        android:id="@+id/post_date"
                        android:padding="10dp"
                        android:text="Date goes here"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_width="287dp"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:layout_height="45dp"
                        android:id="@+id/post_price"
                        android:padding="10dp"
                        android:text="20"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="Add additional comments here"
                        android:layout_height="45dp"
                        android:id="@+id/post_additional"
                        android:padding="10dp"
                        android:layout_width="wrap_content" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>