<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.example.blog.Main_navigation">


        <Button
            android:id="@+id/requestList"
            android:text="@string/request_new_ride"

            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/button_style_white"
            android:layout_below="@+id/sellingList"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/sellingList"

            android:textColor="@color/GhostWhite"
            android:text="Offer New Ride"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/button_style_blue"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/requestList"
            android:layout_alignStart="@+id/requestList" />

        <Button
            android:id="@+id/logout_button"
            android:text="Log Out"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@color/Gold"
            android:layout_marginBottom="88dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/account_setting"
            android:layout_alignStart="@+id/account_setting" />

        <Button
            android:id="@+id/account_setting"
            android:text="Update Profile"
            android:background="@color/Gold"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="60dp"
            android:layout_alignBottom="@+id/logout_button"
            android:layout_alignLeft="@+id/requestList"
            android:layout_alignStart="@+id/requestList" />

</RelativeLayout>