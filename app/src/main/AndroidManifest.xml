<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.example.blog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Welcome"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pop_window"
            android:label="Ride Preview"
            android:theme="@style/AppTheme.PopTheme" />
        <activity
            android:name=".Login"
            android:label="@string/app_name" />
        <activity
            android:name=".User_Account"
            android:label="User Account"
            android:launchMode="standard"/>
        <activity
            android:name=".User_Posts"
            android:label="History"/>
        <activity
            android:name=".Main_navigation"
            android:label="UCSD Rideshare" />
        <activity
            android:name=".Request_Form"
            android:label="Ride Request Form" />
        <activity
            android:name=".Selling_Form"
            android:label="Ride Sell Form" />
        <activity
            android:name=".UserProfileSetupController"
            android:label="User Profile Setup"
            android:launchMode="standard"/>
        <activity
            android:name=".List_of_Sells"
            android:label="Ride Offers List" />
        <activity
            android:name=".List_of_Requests"
            android:label="Ride Requests List" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Splash_Screen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Loading_Req_Posts" />
        <activity android:name=".Loading_Sell_Posts"/>
    </application>


    <!-- Disable animations on debug builds so that the animations do not interfere with Espresso
         tests.  Adding this permission to the manifest is not sufficient - you must also grant the
         permission over adb! -->
    <uses-permission android:name="android.permission.SET_ANIMATION_SCALE" />

</manifest>